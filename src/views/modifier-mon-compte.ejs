<!DOCTYPE html>
<html lang="fr">
    <head>
        <title>Modifier Profil</title>
        <link href="/bs/bootstrap.min.css" rel="stylesheet">
    </head>
   
    <body>
        <%- include("Navbar.component.ejs",{ page: "Mon compte" }) %>
        <div class="container">
            <span class="h4 ml-2">Modifier les informations du compte</span>
            <form class="mt-4" >
                <fieldset>
                <div class="form-group">
                    <label for="Input1">Email</label>
                    <input type="text" class="form-control" id="Input1" name="mail" placeholder="Saisissez votre email">
                </div>
                <div class="form-group">
                    <label for="pseudo">Pseudo</label>
                    <input type="password" class="form-control" id="pseudo" name="pseudo" placeholder="Saisissez votre pseudo">
                </div>
                <div class="form-group">
                    <label for="mdp">Ancien mot de passe</label>
                    <input type="password" class="form-control" id="mdp" name="mdp" placeholder="Saisissez votre ancien mot de passe">
                </div>

                <div class="form-group">
                    <label for="mdp">Nouveau mot de passe</label>
                    <input type="password" class="form-control" id="mdp" name="mdp" placeholder="Saisissez votre nouveau mot de passe">
                </div>

                <div class="form-group">
                    <label for="mdp">Confirmation nouveau mot de passe</label>
                    <input type="password" class="form-control" id="mdp" name="mdp" placeholder="Confirmer votre nouveau mot de passe">
                </div>
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                <a href="/mon-compte" class="btn btn-outline-secondary">Annuler</a>
                </fieldset>
            </form>
        </div>
        
        <script src="/js/jquery.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>
    </body>
</html>